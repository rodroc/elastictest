{% extends "theme/bare.twig" %}

{% block head %}
	{{ parent() }}
	<link href="{{base_url}}lib/toastr/toastr.min.css" rel="stylesheet">
	<link href="{{base_url}}lib/waitMe-gh-pages/waitMe.min.css" rel="stylesheet">
{% endblock %}

{% block content %}

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header hidden">
                            Search Movie / Actor
                            <small>Subheading</small>
                        </h1>
                        <ol class="breadcrumb hidden">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-file"></i> Search Movie / Actor
                            </li>
                        </ol>

                    </div>
                </div>
                <!-- /.row -->
		
	
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-teal">
					<div class="panel-heading hidden">Panel Sample</div>
					<div class="panel-body">
						<form class="form-inline">
						  <div class="form-group">
						    <label for="exampleInputName2">Movie / Actor</label>
						    <input type="text" name="searchtext" class="form-control" id="searchtext" placeholder="Enter your keywords">
						  </div>
						  <button type="button" class="btn btn-warning btnSearch">
						  	<i class="fa fa-search"></i>
						  	&nbsp;Search&nbsp;
						  	<i class="fa fa-spinner fa-spin hidden"></i>
						  </button>
						</form>

					</div>
				</div>
			</div>
		</div><!--/.row-->

		<div class="row search-result-container">
			<div class="col-md-12">
				<div class="bootstrap-table table-responsive search-container">

				<div class="clearfix"></div>
				</div>
			</div>

{% endblock %}

{% block scripts %}
	{{ parent() }}
	<script src="{{base_url}}lib/underscore-min.js"></script>
	<script src="{{base_url}}lib/toastr/toastr.min.js"></script>
	<script src="{{base_url}}lib/jquery.typewatch.js"></script>
	<script src="{{base_url}}lib/waitMe-gh-pages/waitMe.min.js"></script>
	<script src="{{base_url}}js/search.js"></script>
{% endblock %}